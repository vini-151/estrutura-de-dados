    // função recursiva
    // Q06
#include <stdio.h>
#include <stdlib.h>

#define ERRO -1

int g(int x)
{
    if (x == 0){
        return (-1);
    }
    else if (x > 0){
        return (4 * g(x - 1) + 6);
    }
    else{
        return (ERRO);
    }
}

int main(){

    system("cls");

    int n =3;
    int Funcao = g(n);

    if (g != ERRO){
        printf("f(%d) = %d\n", n, Funcao);
    }else{
        printf("Erro\n");
    }
    
    return 0;


}


