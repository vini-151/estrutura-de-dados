    // função recursiva
    // Q05



#include <stdio.h>
#include <stdlib.h>

#define ERRO -1

int f(int x)
{
    if (x == 0){
        return (3);
    }
    else if (x > 0){
        return (2 * f(x - 1) + 5);
    }
    else{
        return (ERRO);
    }
}

int main(){

    system("cls");

    int n =4;
    int Funcao = f(n);

    if (f != ERRO){
        printf("f(%d) = %d\n", n, Funcao);
    }else{
        printf("Erro\n");
    }
    


}
